model ProfileRating {
  id           BigInt @id @default(autoincrement())
  raterUserId  BigInt
  targetUserId BigInt
  attractive   Int
  smart        Int
  funny        Int
  interesting  Int
  createdAt    DateTime @default(now())
  rater        Profile @relation("RatingsGiven", fields: [raterUserId], references: [userId])
  target       Profile @relation("RatingsGot",   fields: [targetUserId], references: [userId])
  @@unique([raterUserId, targetUserId])
  @@index([targetUserId, createdAt])
}

model Top5List {
  id        BigInt   @id @default(autoincrement())
  profileId BigInt
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile  @relation(fields: [profileId], references: [id])
  items     Top5Item[]
  @@index([profileId, updatedAt])
}

model Top5Item {
  id       BigInt @id @default(autoincrement())
  listId   BigInt
  order    Int
  text     String
  list     Top5List @relation(fields: [listId], references: [id])
  @@unique([listId, order])
}
